.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h2 New ad
      .panel-body
        = simple_form_for @advert do |f|
          = f.error_notification
          .form-group
            = f.input :title, required: true, input_html: { class: 'form-control' }
            = f.input :description, required: true, input_html: { class: 'form-control' }
            = f.input :city, required: true, input_html: { class: 'form-control' }
            = f.input :street, required: true, input_html: { class: 'form-control' }
            = f.input :phone, required: true, input_html: { class: 'form-control' }
          %br/
          .form-actions
            = f.button :submit, "Create", class: "btn btn-primary"
          %br/
      .panel-footer
